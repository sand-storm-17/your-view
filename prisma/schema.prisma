generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coin {
  id Int @id @default(autoincrement())

  coinName               String
  numberOfCoinsMinted    Int?
  valueOfCoin            Float?
  mintAddress            String
  freezeAuthority        String
  associatedTokenAccount String
  minter                 YouTuber? @relation(fields: [minterId], references: [id])
  minterId               Int?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime? @updatedAt
  // User                   User?     @relation(fields: [userId], references: [id])
  // userId                 Int?
}

model YouTuber {
  id              Int      @id @default(autoincrement())
  rank            Int
  channelName     String
  subscriberCount Int
  coinsMinted     Coin[]
  mints           String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

