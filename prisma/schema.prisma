generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coin {
  id Int @id @default(autoincrement())

  coinName            String
  numberOfCoinsMinted Int
  valueOfCoin         Float
  minter              YouTuber @relation(fields: [minterId], references: [id])
  minterId            Int
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model YouTuber {
  id              Int      @id @default(autoincrement())
  rank            Int
  channelName     String
  subscriberCount Int
  coins           Coin[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}